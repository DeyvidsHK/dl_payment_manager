<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="dl_payment_view_tree" model="ir.ui.view">
        <field name="name">dl.payment.view.tree</field>
        <field name="model">dl.payment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="project_id" />
                <field name="amount" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="dl_payment_view_form" model="ir.ui.view">
        <field name="name">dl.payment.view.form</field>
        <field name="model">dl.payment</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group col="2">
                        <group>
                            <field name="amount" />
                            <field name="payment_date" />
                        </group>
                        <group>
                            <field name="state" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
